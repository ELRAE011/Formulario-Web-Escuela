<div class="card card-body p-4 rounded-0 bg-dark text-white">
    <h4>Agregar Alumnos</h4>
    <form action="/Alumnos/Agregar" method="POST">

    <div>
        <label for="nombre">Escribe el nombre:</label>
        <input type="text" name="nombre" placeholder="Nombre" id="nombre" class="form-control bg-dark text-white"/>
    </div>

    <div>
        <label for="paterno">Escriba el apellido Paterno:</label>
        <input type="text" name="paterno" placeholder="Paterno" id="paterno" class="form-control bg-dark text-white"/>
    </div>

    <div>
        <label for="materno">Escribe el apellido Materno:</label>
        <input type="text" name="materno" placeholder="Materno" id="materno" class="form-control bg-dark text-white"/>
    </div>

    <div>
        <label for="fechaNac">Escriba su fecha de Nacimiento:</label>
        <input type="date" name="fechaNac" class="form-control bg-dark text-white"/>
    </div>

    <div>
        <label for="sexo">Escriba su Sexo:</label>
        <input type="text" name="sexo" placeholder="Sexo" id="sexo" class="form-control bg-dark text-white"/>
    </div>

    <div>
        <label for="celular">Ingrese su celular:</label>
        <input type="number" name="celular" placeholder="5511223344" id="celular" class="form-control bg-dark text-white"/>
    </div>

    <div>
        <label for="direccion">Ingrese su direccion:</label>
        <input type="text" name="direccion" placeholder="Calle ## Mz ## Lt ##" id="direccion" class="form-control bg-dark text-white" />
    </div>

    <button class="btn btn-success btn-sm mt-2 ">Agregar</button>

</form>

</div>